{
  "name": "doc-ai-production",
  "version": "0.1.0",
  "description": "Minimal Electron app for DocAI production builds",
  "main": "main.js",
  "author": "hasan",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --mac --win",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron": "^25.0.0",
    "@supabase/supabase-js": "^2.35.0",
    "lowdb": "^6.0.1"
  },
  "devDependencies": {
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.hsnnrn.docaiproduction",
    "productName": "DocAiProduction",
    "files": [
      "**/*"
    ],
    "extraResources": [],
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": ["nsis"],
      "publisherName": "hsnnrn"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}