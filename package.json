{
  "name": "document-converter",
  "version": "1.0.0",
  "description": "AI-powered local document conversion tool for PDF, Word, and Excel files",
  "main": "dist/main/main/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite --host",
    "dev:main": "tsc -p tsconfig.main.json && node -e \"try { require('fs').copyFileSync('.env', 'dist/.env'); console.log('✅ .env copied to dist/'); } catch(e) { console.log('⚠️ No .env file found, continuing...'); }\" && electron dist/main/main/main.js --inspect=5858",
    "dev:fast": "concurrently \"npm run dev:renderer\" \"npm run dev:main:fast\"",
    "dev:main:fast": "tsc -p tsconfig.main.json && electron dist/main/main/main.js",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:renderer:prod": "vite build --config vite.config.production.ts",
    "build:main": "tsc -p tsconfig.main.json && node -e \"try { require('fs').copyFileSync('.env', 'dist/.env'); console.log('✅ .env copied to dist/ for production'); } catch(e) { console.log('⚠️ No .env file found for production build'); }\"",
    "build:all": "npm run build && electron-builder --mac --win --linux",
    "build:windows": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac --config electron-builder-mac.json",
    "build:mac:prod": "NODE_ENV=production npm run build:renderer:prod && npm run build:main && electron-builder --mac --config electron-builder-mac.json --publish=never",
    "build:mac:notarize": "NODE_ENV=production npm run build && electron-builder --mac --config electron-builder-mac.json --publish=always",
    "build:linux": "npm run build && electron-builder --linux",
    "electron": "electron .",
    "electron:dev": "npm run build:main && electron . --inspect=5858",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:conversion": "npm run generate:samples && npm run test",
    "test:rag": "node scripts/test-rag-integration.js",
    "generate:samples": "node scripts/generate-test-pdfs.js",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "electron-rebuild": "electron-rebuild",
    "electron-rebuild:keytar": "electron-rebuild -f -w keytar",
    "postinstall": "electron-builder install-app-deps",
    "start": "npm run dev",
    "start:fast": "npm run dev:fast",
    "start:prod": "npm run build && electron .",
    "optimize": "node scripts/optimize-performance.js",
    "optimize:prod": "node scripts/optimize-for-production.js",
    "clean": "rm -rf dist release",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "document-converter",
    "pdf",
    "excel",
    "word"
  ],
  "author": "Document Converter Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/keytar": "^4.0.0",
    "@types/html-to-docx": "^1.8.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "@vitejs/plugin-react": "^4.0.4",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.49.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "vite": "^4.4.9"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "@supabase/supabase-js": "^2.57.4",
    "axios": "^1.12.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "convertapi": "^1.15.0",
    "cors": "^2.8.5",
    "docx": "^8.5.0",
    "dotenv": "^17.2.2",
    "electron-store": "^8.1.0",
    "keytar": "^7.9.0",
    "electron-updater": "^6.1.4",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "form-data": "^4.0.4",
    "html-to-docx": "^1.8.0",
    "lucide-react": "^0.279.0",
    "mammoth": "^1.6.0",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pdf2html": "^4.4.0",
    "pdfjs-dist": "^3.11.174",
    "python-shell": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.16.0",
    "tailwind-merge": "^1.14.0",
    "tesseract.js": "^6.0.1",
    "xlsx": "^0.18.5",
    "zustand": "^4.4.1"
  },
  "build": {
    "appId": "com.docconverter.app",
    "productName": "Document Converter",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "buildDependenciesFromSource": true,
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "darkModeSupport": true
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Office",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "your-org",
      "repo": "document-converter"
    }
  }
}
