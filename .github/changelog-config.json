{
  "categories": [
    {
      "title": "## 🚀 Yeni Özellikler",
      "labels": ["feature", "enhancement", "yeni özellik"]
    },
    {
      "title": "## 🐛 Hata Düzeltmeleri",
      "labels": ["bug", "bugfix", "fix", "hata"]
    },
    {
      "title": "## 📚 Dokümantasyon",
      "labels": ["documentation", "docs", "dokümantasyon"]
    },
    {
      "title": "## 🔧 İyileştirmeler",
      "labels": ["improvement", "refactor", "iyileştirme"]
    },
    {
      "title": "## 🎨 UI/UX",
      "labels": ["ui", "ux", "design", "tasarım"]
    },
    {
      "title": "## ⚡ Performans",
      "labels": ["performance", "optimization", "performans"]
    },
    {
      "title": "## 🔒 Güvenlik",
      "labels": ["security", "güvenlik"]
    },
    {
      "title": "## 🧪 Test",
      "labels": ["test", "testing"]
    },
    {
      "title": "## 🔗 Bağımlılıklar",
      "labels": ["dependencies", "deps"]
    },
    {
      "title": "## 📦 Diğer Değişiklikler",
      "labels": ["*"]
    }
  ],
  "ignore_labels": [
    "ignore",
    "wontfix",
    "duplicate",
    "invalid"
  ],
  "sort": "ASC",
  "template": "#{{NUMBER}} - {{TITLE}} (@{{AUTHOR}})",
  "pr_template": "- #{{NUMBER}} - {{TITLE}} (@{{AUTHOR}})",
  "empty_template": "- Değişiklik yok",
  "label_extractor": [
    {
      "pattern": "^(feature|feat)(\\(.+\\))?:",
      "target": "feature"
    },
    {
      "pattern": "^(fix|bugfix)(\\(.+\\))?:",
      "target": "bug"
    },
    {
      "pattern": "^(docs|documentation)(\\(.+\\))?:",
      "target": "documentation"
    },
    {
      "pattern": "^(perf|performance)(\\(.+\\))?:",
      "target": "performance"
    },
    {
      "pattern": "^(refactor|improvement)(\\(.+\\))?:",
      "target": "improvement"
    },
    {
      "pattern": "^(test|tests)(\\(.+\\))?:",
      "target": "test"
    },
    {
      "pattern": "^(style|ui|ux)(\\(.+\\))?:",
      "target": "ui"
    },
    {
      "pattern": "^(security|sec)(\\(.+\\))?:",
      "target": "security"
    }
  ]
}

