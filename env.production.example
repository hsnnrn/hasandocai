# Production Environment Variables for Mac
NODE_ENV=production

# Supabase Configuration
SUPABASE_OAUTH_CLIENT_ID=your_production_client_id_here
SUPABASE_OAUTH_CLIENT_SECRET=your_production_client_secret_here
SUPABASE_PROJECT_REF=your_production_project_ref_here

# OAuth Server Configuration
OAUTH_PORT=54321

# ConvertAPI Configuration (if using)
CONVERTAPI_KEY=your_convertapi_key_here

# Application Configuration
APP_NAME=Document Converter
APP_VERSION=1.0.0
APP_DESCRIPTION=AI-powered local document conversion tool

# Security Settings
ENABLE_CRASH_REPORTER=false
ENABLE_ANALYTICS=false
ENABLE_UPDATE_CHECKER=true

# Performance Settings
ENABLE_GPU_ACCELERATION=true
MAX_MEMORY_USAGE=2048
ENABLE_HARDWARE_ACCELERATION=true

# Logging Configuration
LOG_LEVEL=warn
ENABLE_DEBUG_LOGS=false
ENABLE_PERFORMANCE_LOGS=false
